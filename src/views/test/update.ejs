<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css" />
    <title>Document</title>
</head>

<body>
    <div class="update-user-container">
        <form action="/update-user" method="POST">

            <div>
                <label>First Name:</label>
                <input name="firstName" value="<%=dataUser[0].firstName %>" />
            </div>
            <div>
                <label>Last Name:</label>
                <input name="lastName" value="<%=dataUser[0].lastName %>" />
            </div>
            <div>
                <label>Email:</label>
                <input name="email" value="<%=dataUser[0].email %>" />
            </div>
            <div>
                <label>Address:</label>
                <input name="address" value="<%=dataUser[0].address %>" />
            </div>
            <input type="text" value="<%=dataUser[0].id %>" hidden name="id" />
            <div>
                <button type="submit" class="btn-save">save</button>
            </div>
        </form>
    </div>
</body>

</html>